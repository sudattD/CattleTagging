<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hdfcergo.cattletagging.LeadSummaryActivity.CattleLeadSummaryActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameTxt"
            android:orientation="horizontal"
            android:weightSum="1">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/usernameTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/edt_cattle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cattle not available"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:textColor="@android:color/black"
                    android:textSize="19sp" />

            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:id="@+id/arrowdown"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_action_arrowdown"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight=".20" />

        </FrameLayout>

        <EditText
            android:layout_below="@+id/edt_cattle"
            android:id="@+id/usernameEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comments"

            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textColor="@android:color/black"
            android:textSize="19sp" />





        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_below="@+id/ll"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:clickable="true"
            android:layout_marginBottom="40dp"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="1"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <View
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:background="@drawable/roundedrectgreen"
            android:layout_marginLeft="10dp"
            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Completed"
            android:id="@+id/textViewR"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="0.5">

        <View
            android:layout_width="35dp"
            android:layout_height="28dp"
            android:background="@drawable/roundedrectblue"
            android:layout_marginLeft="50dp"
            ></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pending"
            android:id="@+id/textViewB"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
