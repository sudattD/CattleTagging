<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="7dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/grey_dark"
        app:cardMaxElevation="5dp"
        android:layout_marginTop="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <TextView
                android:id="@+id/tv_beneficiery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:text="Beneficiery - Dada Bhai Pathan"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_loanaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_beneficiery"
                android:layout_marginTop="5dp"
                android:text="Loan Account number - 00xx5674532"
                android:textColor="#000000"
                android:textSize="16dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_leadno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_loanaccount"
                android:layout_marginTop="5dp"
                android:text="Lead number - CT88765432"
                android:textColor="#000000"
                android:textSize="16dp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_leadno"
                android:layout_marginTop="5dp"
                android:text="Lead Generated Date - 09/07/2015"
                android:textColor="#000000"
                android:textSize="16dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cattles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_date"
                android:layout_marginTop="5dp"
                android:text="No. of cattles - 2 Tat : 24 hrs"
                android:textColor="#000000"
                android:textSize="16dp"

                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_call"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_call"

                    />

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>